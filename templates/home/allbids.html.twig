{% extends 'base.html.twig' %}

{% block navbar %}
    <nav class="navbar navbar-dark bg-dark sticky-top">
        <a href="{{ path('home') }}" class="navbar-brand">
            BidGames
        </a>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <a href="{{ path('app_register') }}" class="navbar-brand">
            Sign in
        </a>
    </nav>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-3 mb-4">Bids</h1>
        <div class="row">
            {% for bid in bid %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="https://via.placeholder.com/200x150" alt="{{ bid.bet }}" class="card-img-top">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-item-center">
                                <h2>Titre</h2>
                                <a href="{{ path('bid', {'id' : bid.id}) }}" class="btn btn-dark">View details</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
