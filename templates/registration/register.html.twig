{% extends 'base.html.twig' %}

{% form_theme registrationForm 'bootstrap_3_layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-dark bg-dark sticky-top">
        <a href="{{ path('home') }}" class="navbar-brand">
            BidGames
        </a>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <a href="{{ path('app_register') }}" class="navbar-brand">
            Sign in
        </a>
    </nav>
{% endblock %}

{% block body %}
    <style>
        .formSec {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .formDiv {
            border: solid 1px #343a40;
            border-radius: 10px;
            padding: 0 10px;
            margin: 30px 0;
            width: 33%;
        }
        .formTitle {
            display: flex;
            justify-content: center;
        }
    </style>
    <section class="formSec">
        <div class="formDiv">
            <div class="formTitle">
                <h2>Create Account</h2>
            </div>
            <div>
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.birthdate) }}
                {{ form_row(registrationForm.address) }}
                {{ form_row(registrationForm.id_city) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.licence) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <button type="submit" class="btn">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>

{% endblock %}
